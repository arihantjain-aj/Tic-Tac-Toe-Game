<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000034"
    android:backgroundTintMode="multiply"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="cursive"
        android:text="Tic-Tac-Toe"
        android:textColor="#EC34AA"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="345dp"
        android:layout_height="345dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="120dp"
        android:layout_weight="1"
        android:background="@drawable/bg"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:rowCount="3"
        app:layout_constraintBottom_toTopOf="@+id/resetButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <ImageButton
            android:id="@+id/cells0"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@android:color/transparent"
            android:onClick="onGridCellClick"
            android:tag="0" />

        <ImageButton
            android:id="@+id/cells1"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@android:color/transparent"
            android:onClick="onGridCellClick"
            android:tag="1" />

        <ImageButton
            android:id="@+id/cells2"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@android:color/transparent"
            android:onClick="onGridCellClick"
            android:tag="2" />

        <ImageButton
            android:id="@+id/cells3"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@android:color/transparent"
            android:onClick="onGridCellClick"
            android:tag="3" />

        <ImageButton
            android:id="@+id/cells4"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@android:color/transparent"
            android:onClick="onGridCellClick"
            android:tag="4" />

        <ImageButton
            android:id="@+id/cells5"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@android:color/transparent"
            android:onClick="onGridCellClick"
            android:tag="5" />

        <ImageButton
            android:id="@+id/cells6"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@android:color/transparent"
            android:onClick="onGridCellClick"
            android:tag="6" />

        <ImageButton
            android:id="@+id/cells7"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@android:color/transparent"
            android:onClick="onGridCellClick"
            android:tag="7" />

        <ImageButton
            android:id="@+id/cells8"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@android:color/transparent"
            android:onClick="onGridCellClick"
            android:tag="8" />


    </GridLayout>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="44dp"
        android:background="#000034"
        android:backgroundTintMode="screen"
        android:fontFamily="sans-serif"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:text="Reset"
        android:textColor="#FE50BE"
        android:textSize="28sp"
        app:iconTint="#181819"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
